  <modelVersion>4.0.0</modelVersion>
  <groupId>CorruptedPrisonsDevTeam</groupId>
  <artifactId>UniversalCoreRemake</artifactId>
  <version>1.0-SNAPSHOT</version>
  <url>https://github.com/StupidBot/UniversalCoreRemake</url>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources/</directory>
        <includes>
          <include>**/*.yml</include>
          <include>de.slikey</include>
          <include>fr.minuskube</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.artifactId}-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>de.slikey</pattern>
                  <shadedPattern>me.stupidbot.universalcoreremake.slikey</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>fr.minuskube</pattern>
                  <shadedPattern>me.stupidbot.universalcoreremake.minuskube</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.google</pattern>
                  <shadedPattern>me.stupidbot.universalcoreremake.google</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
